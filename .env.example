# Public runtime envs for Next.js (client-visible!)

# Site configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Cluster: devnet | mainnet-beta
NEXT_PUBLIC_CLUSTER=devnet
SOLANA_CLUSTER=devnet

# RPC endpoint (server-side)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Program configuration
# Replace with your deployed program ID (Base58 pubkey)
NEXT_PUBLIC_PROGRAM_ID=CHANGEME_PROGRAM_ID
# Replace with your protocol treasury account (Base58 pubkey)
NEXT_PUBLIC_PROTOCOL_TREASURY=CHANGEME_TREASURY
SOLANA_TREASURY=CHANGEME_TREASURY

# UI/Protocol params
# Protocol fee in basis points (200 = 2%)
NEXT_PUBLIC_FEE_BPS=200

# Mock mode: set 0 for real SOL transfer with SPL Memo; set 1 for quick rollback to mock
NEXT_PUBLIC_MOCK_TX=0

# Admin panel (optional)
NEXT_PUBLIC_ENABLE_ADMIN=false
ADMIN_USER=admin
ADMIN_PASS=changeme
