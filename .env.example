# Public runtime envs for Next.js (client-visible!)

# Site configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Cluster: devnet | mainnet-beta
SOLANA_CLUSTER=devnet

# RPC endpoint (server-side)
SOLANA_RPC_URL=https://api.devnet.solana.com

# Treasury account (Base58 pubkey)
SOLANA_TREASURY=CHANGEME_TREASURY

# Mock mode: set 0 for real SOL transfer with SPL Memo; set 1 for quick rollback to mock
NEXT_PUBLIC_MOCK_TX=0

# Admin panel (optional)
NEXT_PUBLIC_ENABLE_ADMIN=false
ADMIN_USER=admin
ADMIN_PASS=changeme

# Coinbase Commerce (optional; if missing, MOCK mode is used)
COINBASE_COMMERCE_API_KEY=
COINBASE_COMMERCE_SHARED_SECRET=

# License secret (32+ chars)
PREDIKT_LICENSE_SECRET=changeme_long_random_secret

# Base URL for redirects (local or production)
PREDIKT_BASE_URL=http://localhost:3000

# === E5 Production Hardening ===

# Base URL for production (include https://)
# Used for cookie domain extraction and redirects
PREDIKT_BASE_URL=https://predikt.io

# Cookie security (production only)
# Set to your domain (e.g., "predikt.io") for production
# Leave empty for localhost development
PREDIKT_COOKIE_DOMAIN=

# License secret (32+ chars random string)
PREDIKT_LICENSE_SECRET=changeme_long_random_secret_32_chars_minimum

# Coinbase Commerce (production/sandbox)
COINBASE_COMMERCE_API_KEY=
COINBASE_COMMERCE_SHARED_SECRET=

# Application environment
NEXT_PUBLIC_APP_ENV=production

# Rate limiting bypass for Pro users (enabled by default)
NEXT_PUBLIC_PRO_BYPASS_ENABLED=true

# Webhook security (32+ chars random string)
WEBHOOK_IDEMPOTENCY_SECRET=changeme_webhook_secret_32_chars_min

# Analytics tracking (optional)
# Set to false to disable server-side analytics in development
ENABLE_ANALYTICS=true
