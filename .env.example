# Predikt Proof Agent V1 - Environment Variables
# Copy this file to .env.local and configure your values

# Core Application
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/predikt_dev"

# Solana Configuration  
SOLANA_CLUSTER=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_SOLANA_CLUSTER=devnet

# Authentication
JWT_SECRET=your-jwt-secret-min-32-chars-long-for-security
NEXT_PUBLIC_AUTH_ENABLED=true

# Feature Flags
FEATURE_AI_NORMALIZATION=false
FEATURE_SOCIAL_SHARING=true
FEATURE_PRO_FEATURES=false
COMMIT_ENABLED=true
ANALYTICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_FREE=20
RATE_LIMIT_PRO=100

# Analytics
ANALYTICS_KEY=your-analytics-key
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Admin/Development
NEXT_PUBLIC_ENABLE_ADMIN=1
ADMIN_USER=admin
ADMIN_PASS=secure-admin-password

# External APIs (optional)
COINBASE_API_KEY=your-coinbase-api-key
ANTHROPIC_API_KEY=your-anthropic-key

# Security Headers
NEXT_PUBLIC_CSP_ENABLED=true
