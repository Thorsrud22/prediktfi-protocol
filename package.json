{
  "name": "prediktfi-protocol",
  "version": "0.1.0",
  "description": "PrediktFi Protocol - Solana prediction market",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPatterns=tests/unit",
    "test:anchor": "anchor test",
    "test:e2e:mock": "playwright test --config=playwright.config.ts",
    "test:e2e:real": "playwright test tests-e2e/real-wallet.spec.ts",
    "test:coverage": "jest --coverage --coverageThreshold='{ \"global\": { \"branches\": 80, \"functions\": 80, \"lines\": 80, \"statements\": 80 } }'",
    "test:all": "npm run test:unit && npm run test:anchor && npm run test:e2e:mock",
    "build": "next build",
    "build:anchor": "anchor build",
    "deploy": "anchor deploy",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "dev": "NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS='--max-old-space-size=8192' next dev --turbo",
    "dev:safe": "NEXT_TELEMETRY_DISABLED=1 next dev",
    "start": "next start"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-phantom": "^0.9.24",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.98.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ulid": "^3.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@prisma/client": "^6.15.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/chai": "^4.3.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^9.0.0",
    "@types/react": "19.1.12",
    "autoprefixer": "^10.4.21",
    "chai": "^4.3.4",
    "eslint": "^9.34.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "mocha": "^9.0.3",
    "prettier": "^2.8.8",
    "prisma": "^6.15.0",
  "tailwindcss": "^3.4.14",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Thorsrud22/prediktfi-protocol"
  },
  "keywords": [
    "solana",
    "anchor",
    "prediction-market",
    "blockchain",
    "defi"
  ],
  "author": "Thorsrud22",
  "license": "MIT"
}
