{
  "name": "prediktfi-protocol",
  "version": "0.1.0",
  "description": "Predikt Protocol - Solana prediction market",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "prebuild": "echo 'ðŸ” Starting build process...'",
    "build": "next build",
    "validate:build": "node -e \"console.log('ðŸ” Validating build...'); if (!require('fs').existsSync('app/page.tsx')) { console.error('âŒ Invalid app root - app/page.tsx not found'); process.exit(1); } if (!require('fs').existsSync('app/api/status/route.ts')) { console.error('âŒ Status endpoint missing'); process.exit(1); } console.log('âœ… Build validation passed');\"",
    "deploy": "anchor deploy",
    "lint": "next lint",
    "lint:fix": "prettier --write \"tests/**/*.ts\"",
    "dev": "NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS='--max-old-space-size=2048' next dev -p 3000",
    "dev:clean": "bash scripts/ensure-port-3000.sh 3000 && NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS='--max-old-space-size=2048' next dev -p 3000",
    "dev:safe": "NEXT_TELEMETRY_DISABLED=1 next dev -p 3000",
    "dev:fast": "NEXT_TELEMETRY_DISABLED=1 NODE_OPTIONS='--max-old-space-size=1024' next dev --turbo -p 3000",
    "start": "next start -p 3000",
    "prisma:generate": "prisma generate",
    "typecheck": "npm run prisma:generate --silent && tsc --noEmit",
    "test:e2e:mock": "playwright test",
    "test:e2e:real": "playwright test tests-e2e/real-wallet.spec.ts",
    "test:smoke": "./smoke-e8.sh",
    "bench:signals": "tsx scripts/benchSignals.ts",
    "bench:signals:prod": "npm run build && NODE_ENV=production npm start & sleep 3 && BENCH_SIGNALS_URL=http://localhost:3000/api/public/signals npm run bench:signals; pkill -f 'next start' || true",
    "test:signals-rollout": "./smoke-signals-rollout.sh localhost:3000",
    "monitor:signals-rollout": "./monitor-signals-rollout.sh localhost:3000 30",
    "smoke:e7": "bash scripts/smoke-e7.sh",
    "smoke:e8": "bash smoke-e8.sh",
    "qa:all": "pnpm vitest run && bash scripts/test-e5-qa.sh && bash smoke-e8.sh",
    "unit": "vitest run",
    "advisor:tick": "tsx scripts/cron-advisor-tick.ts",
    "advisor:test": "tsx scripts/cron-advisor-tick.ts",
    "db:seed:creators": "tsx prisma/seed-creators.ts",
    "db:seed:codes": "tsx prisma/seed-invite-codes.ts",
    "guard:json": "grep -R \"JSON.parse(\" app/advisor | grep -v safe-fetch.ts && echo 'Found raw JSON.parse in app/advisor/*' && exit 1 || exit 0",
    "precommit": "npm run guard:json",
    "eval:model": "tsx scripts/eval-model.ts",
    "digest:ab": "tsx scripts/weekly-digest-ab.ts",
    "digest:enhanced": "tsx scripts/weekly-digest-enhanced.ts",
    "ops:guard": "tsx scripts/cron-ops-guard.ts",
    "p2a:test": "bash scripts/test-p2a.sh",
    "p2a:synthetic": "tsx scripts/synthetic-p2a.ts",
    "p2a:slo": "tsx scripts/slo-monitor.ts",
    "p2a:monitor": "tsx scripts/cron-p2a-monitor.ts",
    "pmf:metrics": "tsx scripts/cron-pmf-metrics.ts",
    "test:p2a": "playwright test tests/p2a-integration.spec.ts",
    "backfill:creator-daily": "tsx scripts/backfill-creator-daily.ts",
    "dq:check": "tsx -e \"import('./app/api/ops/creator-dq/route.ts').then(m => m.GET(new Request('http://localhost:3000/api/ops/creator-dq?days=7', { headers: { 'x-ops-signature': require('crypto').createHmac('sha256', process.env.OPS_SECRET || 'test').update('').digest('hex') } })).then(r => r.json()).then(console.log)\"",
    "dq:watch": "tsx -e \"import('./app/api/ops/creator-dq-watch/route.ts').then(m => m.GET(new Request('http://localhost:3000/api/ops/creator-dq-watch', { headers: { 'x-ops-signature': require('crypto').createHmac('sha256', process.env.OPS_SECRET || 'test').update('').digest('hex') } })).then(r => r.json()).then(console.log))\"",
    "analyze": "npm run build && npx webpack-bundle-analyzer .next/static/chunks/",
    "perf": "npm run build && npm run start",
    "perf:measure": "npm run build && echo 'Starting performance measurement...' && npm run start & sleep 5 && curl -w '@-' -o /dev/null -s http://localhost:3000/ <<< 'time_total: %{time_total}\\n' && pkill -f 'next start'",
    "dev:profile": "NODE_ENV=development NEXT_TELEMETRY_DISABLED=1 next dev --experimental-debug-memory-usage -p 3000"
  },
